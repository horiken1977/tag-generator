{
  "app": {
    "name": "Video Tag Generator",
    "version": "1.0.0",
    "debug": false
  },
  "processing": {
    "batch_size": 10,
    "max_memory_mb": 512,
    "target_tag_count": 175,
    "min_tag_count": 150,
    "max_tag_count": 200
  },
  "ai_models": {
    "default": "openai",
    "openai": {
      "model": "gpt-3.5-turbo",
      "temperature": 0.3,
      "max_tokens": 1500,
      "rate_limit_per_minute": 60
    },
    "claude": {
      "model": "claude-3-haiku-20240307",
      "temperature": 0.3,
      "max_tokens": 1500,
      "rate_limit_per_minute": 40
    },
    "gemini": {
      "model": "gemini-pro",
      "temperature": 0.3,
      "max_tokens": 1500,
      "top_p": 1,
      "top_k": 40,
      "rate_limit_per_minute": 60
    }
  },
  "google_sheets": {
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets",
      "https://www.googleapis.com/auth/drive"
    ],
    "default_sheet_name": "Sheet1",
    "tags_column_name": "Generated_Tags",
    "optimized_sheet_name": "Optimized_Tags"
  },
  "tag_optimization": {
    "min_frequency": 2,
    "similarity_threshold": 0.8,
    "importance_weights": {
      "title": 0.3,
      "skill": 0.25,
      "description": 0.2,
      "summary": 0.15,
      "transcript": 0.1
    }
  },
  "ui": {
    "page_title": "Tag Generator",
    "page_icon": "üè∑Ô∏è",
    "layout": "wide",
    "default_port": 8501,
    "max_upload_size": 200
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "logs/tag_generator.log"
  }
}